{
  "name": "zapper-vscode",
  "displayName": "Zapper",
  "description": "VS Code extension for managing local development with zapper CLI",
  "version": "1.0.0",
  "publisher": "felixsebastian",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixsebastian/zapper-vscode.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:zapperView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Zapper",
      "properties": {
        "zapper.zapPath": {
          "type": "string",
          "default": "",
          "description": "Full path to the zap executable. Leave empty to auto-detect from PATH or common install locations (falls back to 'zap' command)."
        },
        "zapper.nodePath": {
          "type": "string",
          "default": "",
          "description": "Full path to the node executable. Leave empty to auto-detect from PATH or common install locations (falls back to VS Code's Node.js runtime)."
        },
        "zapper.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Show debug information in the Zapper panel (zap path, projects found, etc.)"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zapper",
          "title": "Zapper",
          "icon": "resources/icons/zapper.svg"
        }
      ]
    },
    "views": {
      "zapper": [
        {
          "id": "zapperView",
          "name": "Zapper"
        }
      ]
    },
    "commands": [
      {
        "command": "zapper.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/icons/light/refresh.svg",
          "dark": "resources/icons/dark/refresh.svg"
        }
      },
      {
        "command": "zapper.start",
        "title": "Start",
        "icon": {
          "light": "resources/icons/light/play.svg",
          "dark": "resources/icons/dark/play.svg"
        }
      },
      {
        "command": "zapper.stop",
        "title": "Stop",
        "icon": {
          "light": "resources/icons/light/stop-square.svg",
          "dark": "resources/icons/dark/stop-square.svg"
        }
      },
      {
        "command": "zapper.restart",
        "title": "Restart",
        "icon": {
          "light": "resources/icons/light/restart.svg",
          "dark": "resources/icons/dark/restart.svg"
        }
      },
      {
        "command": "zapper.runTask",
        "title": "Run",
        "icon": {
          "light": "resources/icons/light/play.svg",
          "dark": "resources/icons/dark/play.svg"
        }
      },
      {
        "command": "zapper.startAll",
        "title": "Start All",
        "icon": {
          "light": "resources/icons/light/play.svg",
          "dark": "resources/icons/dark/play.svg"
        }
      },
      {
        "command": "zapper.stopAll",
        "title": "Stop All",
        "icon": {
          "light": "resources/icons/light/stop-square.svg",
          "dark": "resources/icons/dark/stop-square.svg"
        }
      },
      {
        "command": "zapper.restartAll",
        "title": "Restart All",
        "icon": {
          "light": "resources/icons/light/restart.svg",
          "dark": "resources/icons/dark/restart.svg"
        }
      },
      {
        "command": "zapper.openLogs",
        "title": "Logs",
        "icon": {
          "light": "resources/icons/light/logs.svg",
          "dark": "resources/icons/dark/logs.svg"
        }
      },
      {
        "command": "zapper.openTerminal",
        "title": "Terminal",
        "icon": {
          "light": "resources/icons/light/terminal.svg",
          "dark": "resources/icons/dark/terminal.svg"
        }
      },
      {
        "command": "zapper.openZapFile",
        "title": "Open zap.yaml",
        "icon": {
          "light": "resources/icons/light/zapfile.svg",
          "dark": "resources/icons/dark/zapfile.svg"
        }
      },
      {
        "command": "zapper.showLogs",
        "title": "Show Output Logs",
        "icon": {
          "light": "resources/icons/light/logs.svg",
          "dark": "resources/icons/dark/logs.svg"
        }
      },
      {
        "command": "zapper.viewTasks",
        "title": "View Tasks",
        "icon": {
          "light": "resources/icons/light/tasks.svg",
          "dark": "resources/icons/dark/tasks.svg"
        }
      },
      {
        "command": "zapper.enableProfile",
        "title": "Enable"
      },
      {
        "command": "zapper.disableProfile",
        "title": "Disable"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zapper.startAll",
          "when": "view == zapperView",
          "group": "navigation@1"
        },
        {
          "command": "zapper.stopAll",
          "when": "view == zapperView",
          "group": "navigation@2"
        },
        {
          "command": "zapper.restartAll",
          "when": "view == zapperView",
          "group": "navigation@3"
        },
        {
          "command": "zapper.openZapFile",
          "when": "view == zapperView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "zapper.start",
          "when": "viewItem == native-service-stopped || viewItem == docker-service-stopped",
          "group": "inline"
        },
        {
          "command": "zapper.stop",
          "when": "viewItem == native-service-running || viewItem == native-service-pending || viewItem == docker-service-running || viewItem == docker-service-pending",
          "group": "inline"
        },
        {
          "command": "zapper.restart",
          "when": "viewItem == native-service-running || viewItem == native-service-pending || viewItem == docker-service-running || viewItem == docker-service-pending",
          "group": "inline"
        },
        {
          "command": "zapper.openLogs",
          "when": "viewItem == native-service-running || viewItem == native-service-pending || viewItem == docker-service-running || viewItem == docker-service-pending",
          "group": "inline"
        },
        {
          "command": "zapper.openTerminal",
          "when": "viewItem == native-service-running || viewItem == native-service-stopped || viewItem == native-service-pending",
          "group": "inline"
        },
        {
          "command": "zapper.startAll",
          "when": "viewItem == project",
          "group": "inline"
        },
        {
          "command": "zapper.stopAll",
          "when": "viewItem == project",
          "group": "inline"
        },
        {
          "command": "zapper.restartAll",
          "when": "viewItem == project",
          "group": "inline"
        },
        {
          "command": "zapper.enableProfile",
          "when": "viewItem == profile-inactive",
          "group": "inline"
        },
        {
          "command": "zapper.disableProfile",
          "when": "viewItem == profile-active",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile && mkdir -p builds && vsce package --out builds/",
    "package": "mkdir -p builds && vsce package --out builds/",
    "buildpack": "npm run compile && mkdir -p builds && vsce package --out builds/",
    "install-extension": "code --install-extension builds/zapper-vscode-0.3.0.vsix"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^4.9.4"
  }
}