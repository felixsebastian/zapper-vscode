{
  "name": "zapper-vscode",
  "displayName": "Zapper",
  "description": "VS Code extension for managing local development with zapper CLI",
  "version": "0.1.0",
  "publisher": "felixsebastian",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:zapperView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "zapperView",
          "name": "Zapper"
        }
      ]
    },
    "commands": [
      {
        "command": "zapper.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run compile",
    "package": "vsce package",
    "install-extension": "code --install-extension zapper-vscode-0.0.1.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.19.0",
    "zod": "^3.22.4"
  }
}